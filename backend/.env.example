PORT=3000
NODE_ENV=development
# For local development (backend running outside Docker)
DATABASE_URL=postgresql://postgres:root@localhost:5432/ASI
# For Docker (backend running inside Docker)
# DATABASE_URL=postgresql://postgres:root@postgres:5432/ASI
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS - set the URL users use to open the app (fixes "CORS blocked origin" in production)
# Local: http://localhost:8080
# Production (Docker): http://YOUR_SERVER_IP:8080 e.g. http://15.207.235.35:8080
# Multiple: CORS_ORIGIN=http://localhost:8080,http://15.207.235.35:8080
CORS_ORIGIN=
FRONTEND_URL=http://localhost:8080

# SSH Configuration (hardcoded - used for all users)
# SSH server IP address
SSH_IP=192.168.1.100
# SSH server port (encrypted) - use scripts/encrypt-value.js to encrypt your port number
# Example: node scripts/encrypt-value.js 22
SSH_PORT=your-encrypted-port-here
# Encryption key for encrypting/decrypting sensitive values (generate a new one for production)
# Generate with: node -e "const crypto = require('crypto'); console.log(crypto.randomBytes(32).toString('hex'));"
ENCRYPTION_KEY=your-encryption-key-here

